<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Faluf Portfolio</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-grow-1">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="fa-solid fa-house"></i> Home
            </NavLink>
        </div>
    </nav>

    <div class="bottom-links px-3">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item">
                    <NavLink class="nav-link" href="account/profile" Match="NavLinkMatch.All">
                        <i class="fa-solid fa-user"></i> @context.User.Identity?.Name
                    </NavLink>
                </div>

                <div>
                    <form action="api/Auth/Logout" method="post" @formname="LogoutForm">
                        <AntiforgeryToken />

                        <button type="submit" class="btn btn-outline-danger w-100 text-start mb-3">
                            <i style="margin-right: 0.25rem;" class="fa-solid fa-right-from-bracket"></i>
                            @Localizer["Logout"]
                        </button>
                    </form>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="nav-item">
                    <NavLink class="nav-link" href="account/register">
                        <i class="fa-solid fa-user-plus"></i> Register
                    </NavLink>
                </div>

                <div class="nav-item">
                    <NavLink class="nav-link" href="account/login">
                        <i class="fa-solid fa-right-to-bracket"></i> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>